                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        @Html.ActionLink("Registre-se", "Register") se ainda não tem uma conta
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Log in" />
                                </fieldset>
                            }
